{
  "enabled": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["breaking change"] // Label for major updates
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true // Automatically merge minor and patch updates
    }
  ],
  "platform": "github",
  "repositories": [
    "mpasterkamp/poc-handover-toolkit"
  ]
}

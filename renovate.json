{
  "enabled": true,
  "rebaseStalePrs": true,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["breaking change"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "platform": "github",
  "repositories": [
    "mpasterkamp/poc-handover-toolkit"
  ]
}
